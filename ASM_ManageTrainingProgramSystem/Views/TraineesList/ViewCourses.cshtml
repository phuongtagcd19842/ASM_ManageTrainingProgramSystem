@model IEnumerable<ASM_ManageTrainingProgramSystem.Models.Course>
@{
    ViewBag.Title = "ViewCourses";
}

<h2>View Courses</h2>

<div class="row">
    <div class="col-md-4">
        <ul class="list-group">
            <li class="list-group-item active">
                Courses:
                <span class="badge">@Model.Count()</span>
            </li>
            @foreach (var course in Model)
            {
                <li class="list-group-item">
                    @course.CourseName
                    <div class="float-right">
                        <span>
                            @Html.ActionLink("Remove",
                                             "RemoveCourse",
                                             "TraineesList",
                                             new { id = ViewBag.UserId, courseId = course.Id },
                                             new { @class = "text-danger" }
                                             )
                        </span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>