@model ASM_ManageTrainingProgramSystem.Models.TrainerInfo
@{
    ViewBag.Title = "EditTrainer";
}

<h2>Edit Trainer Profile</h2>

@using (Html.BeginForm("EditTrainer", "Admin", FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.UserId)
    <div class="form-group">
        @Html.LabelFor(m => m.TrainerName)
        @Html.EditorFor(m => m.TrainerName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.TrainerName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ExternalOrInternal)
        @Html.EditorFor(m => m.ExternalOrInternal, new { htmlAttributes = new { @class = "form-control", } })
        @Html.ValidationMessageFor(m => m.ExternalOrInternal, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.WorkingPlace)
        @Html.EditorFor(m => m.WorkingPlace, new { htmlAttributes = new { @class = "form-control", } })
        @Html.ValidationMessageFor(m => m.WorkingPlace, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Telephone)
        @Html.EditorFor(m => m.Telephone, new { htmlAttributes = new { @class = "form-control", } })
        @Html.ValidationMessageFor(m => m.Telephone, "", new { @class = "text-danger" })
    </div> <div class="form-group">
        @Html.LabelFor(m => m.EmailAddress)
        @Html.EditorFor(m => m.EmailAddress, new { htmlAttributes = new { @class = "form-control", } })
        @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}
