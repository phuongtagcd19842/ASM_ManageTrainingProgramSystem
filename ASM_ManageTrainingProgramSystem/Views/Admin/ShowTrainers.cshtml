@model IEnumerable<ASM_ManageTrainingProgramSystem.Models.ApplicationUser>
@{
    ViewBag.Title = "ShowTrainers";
}

<div class="row">
    <div class="col-md-4">
        <h2>Trainers List</h2>
        <ul>
            @Html.ActionLink(
             "Create a new Trainer",
             "CreateTrainer",
             "Account",
             null,
             new { @class = "btn btn-primary" }
             )
        </ul>
        <br />
        <ul>
            <li class="list-group-item active">
                All Trainers
            </li>
            @foreach (var Trainer in Model)
            {
                <li class="list-group-item">@Trainer.UserName</li>
            }
        </ul>
    </div>
</div>

