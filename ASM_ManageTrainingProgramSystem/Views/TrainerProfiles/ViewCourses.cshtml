@model IEnumerable<ASM_ManageTrainingProgramSystem.Models.Course>
@{
    ViewBag.Title = "ViewCourses";
}

<h2>View All Trainer Courses</h2>

<div class="row">
    <div class="col-md-4">
        <ul class="list-group">
            <li class="list-group-item active">
                Trainer Courses:
                <span class="badge">@Model.Count()</span>
            </li>
            @foreach (var course in Model)
            {
                <li class="list-group-item">
                    @course.CourseName
                    <div class="text-right">
                        <span>
                            @Html.ActionLink("Remove",
                            "RemoveCourses",
                            "TrainerProfiles",
                            new { id = ViewBag.UserId, userId = course.Id },
                            new { @class = "text-danger text-right  " }
                        )
                        </span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>