@model IEnumerable<ASM_ManageTrainingProgramSystem.Models.Course>
@{
    ViewBag.Title = "ViewCourses";
}

<h2>View Courses</h2>

<div class="row">
    <div class="col-md-4">
        <ul class="list-group">
            <li class="list-group-item active">
                Courses Trainer is assigned
                <span class="badge">@Model.Count()</span>
            </li>
            @foreach (var course in Model)
            {
                <li class="list-group-item">
                    @course.CourseName
                    <div class="text-right">
                        <span>
                            @Html.ActionLink("Change",
                              "ChangeCourse",
                              "TrainerProfiles",
                              null,
                              new { @class = "link" }
                            )
                        </span>
                        <span>
                            @Html.ActionLink("Remove",
                            "RemoveCourses",
                            "TrainerProfiles",
                            null,
                            new { @class = "text-danger text-right  " }
                        )
                        </span>
                    </div>


                </li>
            }
        </ul>
    </div>
</div>
<div class="form-group">
    @Html.ActionLink("Assign",
                     "AssignCourse",
                     "TrainerProfiles",
                     null,
                     new { @class = "btn btn-primary" }
                     )
</div>