@model ASM_ManageTrainingProgramSystem.Models.Category
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Course Category</h2>

@using (Html.BeginForm("Edit", "Categories", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(c => c.CategoryName)
        @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.CategoryName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Description)
        @Html.TextBoxFor(c => c.Description, new {style = "height:40px", @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
}